/* miniprogram/pages/play/play.wxss */
page{
  background-color: #eae9e2;
}
.head{
  padding-top: 25rpx;
  padding-left: 15rpx;
  background-color: #eae9e2;
}
.head .audio{
  width: 100%;
  height: 190rpx;
  display: flex;
  background-color: #eae9e2;
  padding-left: 20rpx;
  align-items: center;
}
.head .audio image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.head .audio .mes{
  padding-left: 40rpx;
  margin-top: -18rpx
}
.head .audio .mes text{
  font-size: 35rpx;
  color:#333333
} 
.head #title{
  width: 100%;
    margin: 25rpx 0 30rpx 10rpx;
    background-color: #eae9e2;
}
.head #title text{
  font-size: 39rpx;
  color: #333333
}
.list{
  margin-bottom: 100rpx;
}
.item {
  border-top: 1rpx solid #e0e0e0;
  padding-top: 15rpx;
  padding-bottom: 30rpx;
  background-color: #eae9e2;
}
.list .author{
  display: flex;
  padding-left: 20rpx;
}
.list .author image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 25rpx;
  border-radius: 50%;
  box-sizing: border-box;

}
.item .author .name {
  color: #666666;
  font-size: 40rpx;
}
.head .date {
    font-size: 32rpx;
  color: #999999
}
.content{
  margin-top: 20rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  padding: 10rpx;
  border-radius: 15rpx;
    text-indent: 60rpx;
}
.content text{
  text-indent: 130rpx;
}
.comment{
  height: 100rpx;
  background-color: #eae9e2;
  position: fixed;
 bottom: 0;
 width: 100%;
 box-sizing: border-box;
 align-items: center;
}
.view{
  display: flex
}
.comment .cont{
  width: 400rpx;
  padding-top: 30rpx;
  padding-left: 15rpx;
}
.comment .btn {
  width: 200rpx;
  padding-left: 120rpx;
}
.comment .btn button{
    background: none !important;
    color: rgb(172, 172, 172)
}
.comment .btn button::after{
  border: none
}