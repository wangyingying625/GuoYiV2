.geRen{
  background-color: #e1dfd7;
  height: 100%
}
.geRen .information{
  width: 100%;
  height: 250rpx;
  background-color: #eae9e2;
  display: flex;
  align-content: center
}
.geRen .information image{
  margin-top: 30rpx;
  margin-left: 50rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.geRen .information .name{
  margin-left: 50rpx;
  margin-top: 85rpx;
}
.geRen .information text{
  color: #3f260e;
  font-size: 50rpx;
}
.geRen .list{
  margin-top: 20rpx;
  background-color: #eae9e2;
  height: 260rpx;
}
.geRen .colltion,.geRen  .mess{
  margin-left: 15rpx;
  margin-right: 15rpx;
  padding-left: 10rpx;
  height: 130rpx;
  border-bottom: #dddad1 1px solid;
  display: flex;
  align-items: center
}
.geRen .list image{
  margin-top: 30rpx;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.geRen .list text{
  font-size: 30rpx;
}